{% extends 'base.html.twig' %}

{% block body %}
    <h1>Nouvelle commande</h1>

    <table class="col-xs-2">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prix</th>
        </tr>
        </thead>
        <tbody>
        {% for fruit in fruits %}
            <tr>
                <td>{{ fruit.nom }}</td>
                <td>{{ fruit.prix }} €</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="col-xs-9 col-xs-offset-1">
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Valider" class="btn btn-default"/>
    {{ form_end(form) }}

        <br>
        <ul>
            <li>
                <a href="{{ path('achat_index') }}" class="btn btn-default mybtn">Retour à vos commandes</a>
            </li>
        </ul>

    </div>

{% endblock %}
