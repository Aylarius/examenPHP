{% extends 'base.html.twig' %}

{% block body %}
    <h1>Achats list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Client</th>
                <th>Fruit</th>
                <th>Quantite</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for achat in achats %}
            <tr>
                <td><a href="{{ path('achat_show', { 'id': achat.id }) }}">{{ achat.id }}</a></td>
                <td>{{ achat.client }}</td>
                <td>{{ achat.fruit }}</td>
                <td>{{ achat.quantite }}</td>
                <td>{{ achat.total }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('achat_show', { 'id': achat.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('achat_edit', { 'id': achat.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('achat_new') }}">Create a new achat</a>
        </li>
    </ul>
{% endblock %}
