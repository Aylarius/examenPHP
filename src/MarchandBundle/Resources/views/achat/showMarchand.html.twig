{% extends 'base.html.twig' %}

{% block body %}
    <h1>Résumé de la commande</h1>

    <table>
        <tbody>
        <tr>
            <th>N° Facture :</th>
            <td>{{ achat.id }}</td>
        </tr>
        <tr>
            <th>Client : </th>
            <td>{{ achat.client }}</td>
        </tr>
        <tr>
            <th>Fruit : </th>
            <td>{{ achat.fruit }}</td>
        </tr>
        <tr>
            <th>Quantité : </th>
            <td>{{ achat.quantite }}</td>
        </tr>
        <tr>
            <th>Total : </th>
            <td>{{ achat.total }} €</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('achat_index_marchand') }}" class="btn btn-default mybtn">Retour à la liste des commandes</a>
        </li>
        <br>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer" class="btn btn-default">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}