{% extends 'base.html.twig' %}

{% block body %}
    <h1>Achat</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ achat.id }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ achat.client }}</td>
            </tr>
            <tr>
                <th>Fruit</th>
                <td>{{ achat.fruit }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ achat.quantite }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ achat.total }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('achat_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('achat_edit', { 'id': achat.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
