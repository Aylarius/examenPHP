{% extends 'base.html.twig' %}

{% block body %}
    <h1>Fruit</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ fruit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ fruit.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ fruit.prix }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ fruit.quantite }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('achat_index_marchand') }}" class="btn btn-default mybtn">Retour à l'inventaire</a>
        </li>
        <br>
        <li>
            <a href="{{ path('fruit_edit', { 'id': fruit.id }) }}" class="btn btn-default">Modifier</a>
        </li>
        <br>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-default">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
